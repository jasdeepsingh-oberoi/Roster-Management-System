  <body>

  <div ng-controller="pollsCtrl" layout="column" style="height:500px;" ng-cloak="" class="sidenavdemoBasicUsage" ng-app="MyApp">

  <section layout="row" >
		
  <md-sidenav class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')">

      <md-toolbar class="md-theme-indigo">
        <h1 class="md-toolbar-tools" align ="center">&nbsp Welcome! &nbsp{{firstName}} {{lastName}}</h1>
      </md-toolbar>
      
      
      <md-content layout-padding="" ng-controller="LeftCtrl">
        <md-button ng-click="close()" class="md-primary" hide-gt-md="">
          Close Sidenav Left
        </md-button>
        
        
      </md-content>
	<md-button class="md-raised md-primary" ng-click="tasks()">Tasks</md-button>
    <md-button class="md-raised md-primary">Shopping List</md-button>
    <md-button class="md-raised md-primary"ng-click ="polls()">Polls</md-button>
    <md-button class="md-raised md-primary">Chat</md-button>
    <md-button class="md-raised md-warn" ng-href="/logout">Logout</md-button>
    
    
    </md-sidenav>

    <md-content flex="" layout-padding="">

	<h1 align="center">Polls Page</h1>
	
	<div layout="column" layout-fill="" layout-align="top left">
	<ng-button href="" class="btn bgm-red btn-float waves-effect waves-circle" id="ms-compose" ng-click="addPoll()"><i class="zmdi zmdi-plus"></i><md-tooltip md-direction="right">Create Poll</md-tooltip></n>
	
	</div>
<div>
<br><br>
</div>


<div ng-show="poll">
<md-content layout-padding class="autoScroll">
    <md-input-container class="md-icon-float md-block">  
     <input ng-model="newpoll.question" placeholder="Enter poll question here" type="text">
     <md-button class="md-raised"><a href="" ng-click="createPoll(newpoll.question)">Ask</a></md-button>
    </md-input-container>
    
  </md-content>
</div>


  <div layout="column" layout-fill="" layout-align="top center">
    
  <div class="container" ng-show="pollQuestions">
  <div class="table-responsive">          
  <table class="table">
    <thead>
      <tr>
        <th>Question</th>
        <th>Results</th>
        <th>Respond</th>
      </tr>
    </thead>
    
    <tbody>
      
        <tr ng-repeat="que in question">
        
      	<td>{{que.question}}</td>
      	
     	<td><md-button class="md-raised"><a href="" ng-click="polldetail(que.poll_Id)">View</a></md-button></td>
		<td><md-button class="md-raised"><a href="" ng-click="pollResponse(que.poll_Id)">Respond</a></md-button></td>
     </tbody>	
      </table>
    </div>
    
  <div class="table-responsive"  ng-show=" pollResponses.length > 0" >          
  <table class="table">
    
    <thead>
      <tr>
        <th>Name</th>
    <!--<th>Choice</th>-->
        <th>Response</th>
      </tr>
    </thead>
    
    
    <tbody>
      
        <tr ng-repeat="resp in pollResponses">
      	<td>{{resp.firstName}} {{resp.lastName}}</td>
    <!--<td>{{resp.responseChoice}}</td>-->
      	<td>{{resp.response}}</td>
    
    </tbody>
    </table>
     	
    </div>
    
    

 <div class="table-responsive" ng-show="pollResp" >          
  <table class="table">
    
    <thead>
      <tr>
        <th>Name</th>
    <!--<th>Choice</th>-->
        <th>Response</th>
      </tr>
    </thead>
    
    
    <tbody>
      
        <tr ng-repeat="resp in pollResponses">
      	<td>{{resp.firstName}} {{resp.lastName}}</td>
    <!--<td>{{resp.responseChoice}}</td>-->
      	<td>{{resp.response}}</td>
    
    </tbody>
    </table>
     	
    </div>
 
 
 
 
