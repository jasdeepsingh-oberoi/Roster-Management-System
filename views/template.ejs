<body>


<header id="header" data-ng-include="'/template/header.html'" data-ng-controller="headerCtrl as hctrl"></header>

<section id="main">
    <aside id="sidebar" data-ng-include="'/template/sidebar-left.html'" data-ng-class="{ 'toggled': mactrl.sidebarToggle.left === true }"></aside>
    
    <section id="content">
       






        <md-content>
            <md-toolbar>

            <h1 align="center">Polls</h1>
            </md-toolbar>
            <br>    
                <div layout="column" layout-fill="" layout-align="top left">
                <ng-button href="" class="btn bgm-red btn-float waves-effect waves-circle" id="ms-compose" ng-click="addPoll()"><i class="zmdi zmdi-plus"></i><md-tooltip md-direction="right">Create Poll</md-tooltip></n>
                </div>
            <div>
            <br><br><br>
            </div>


            <div ng-show="poll">
            <md-content layout-padding class="autoScroll">
                <md-input-container class="md-icon-float md-block">  
                 <input ng-model="newpoll.question" placeholder="Enter poll question here" type="text">
                 <md-button class="md-raised"><a href="" ng-click="createPoll(newpoll.question)">Ask</a></md-button>
                </md-input-container>
                
              </md-content>
            </div>


              <div layout="column" layout-fill="" layout-align="top center">
                
              <div class="container" ng-show="pollQuestions">
              <div class="table-responsive">          
              <table class="table">
                <thead>
                  <tr>
                    <th>Question</th>
                    <th>Results</th>
                    <th>Respond</th>
                  </tr>
                </thead>
                
                <tbody>
                  
                    <tr ng-repeat="que in question">
                    
                    <td>{{que.question}}</td>
                    
                    <td><md-button class="md-raised"><a href="" ng-click="polldetail(que.poll_Id)">View</a></md-button></td>
                    <td><md-button class="md-raised"><a href="" ng-click="pollChoice(que.poll_Id)">Respond</a></md-button></td>
                 </tbody>   
                  </table>
                </div>
                
              <div class="table-responsive"  ng-show=" pollResponses.length > 0" >          
              <table class="table">
                
                <thead>
                  <tr>
                    <th>Name</th>
                <!--<th>Choice</th>-->
                    <th>Response</th>
                  </tr>
                </thead>
                
                
                <tbody>
                  
                    <tr ng-repeat="resp in pollResponses">
                    <td>{{resp.firstName}} {{resp.lastName}}</td>
                <!--<td>{{resp.responseChoice}}</td>-->
                    <td>{{resp.response}}</td>
                
                </tbody>
                </table>
                    
                </div>
                
               

            <hr />
             <div ng-show="pollResp">          
                
                <p>Selected Value: <span class="radioValue">{{pollAnswers.response}}</span></p>
                
                <md-radio-group ng-model="pollAnswers.response" class="md-primary" >
                   
                    <md-radio-button ng-repeat="options in pollAnswers"  ng-value="options.response">{{options.response}}</md-radio-button>
                    
                    
                  <md-radio-button ng-value="pollRespons.other">Other</md-radio-group>
                  <md-input-container>
                  
                  <input ng-model="pollRespons.other" placeholder="Other">
                  </md-input-container>
                  <md-button class="md-raised md-primary" ng-click="responseSubmit()">Submit Response</md-button>

                 
                
             <!--   </form> -->
             <hr />
             
             
            </div>
                    

             
             
             
             <script>
             
                var x = document.getElementsByClassName("test");
                console.log(x);
                
                for(i=0;i<x.length;i++){
                    var xx = x[i].innerHTML;
                    var yy = '/polls/'+xx.replace(' ', '-');
                    console.log(xx);
                    x[i].href= yy;
                
                }
            </script> 
                </tr>
                
                </tbody>
              </table>
              </div>
            </div>
                   
                  <div flex=""></div>

        </md-content>


                    
    </section>
</section>




